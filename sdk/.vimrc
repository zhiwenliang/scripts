set nocp
set number
filetype plugin on

"indent options
set ts=4 sw=4 softtabstop=4
set ai expandtab
filetype indent on

"search options
set smartcase
set hls

"performance options
set complete=i
set mouse=a


"autocmd VimEnter * bel term
"autocmd VimEnter * wincmd p

set encoding=utf-8
"set autochdir

"set NERDTree
"autocmd VimEnter * NERDTree | wincmd p
"nnoremap <leader>n :NERDTreeFocus<CR>
"nnoremap <C-n> :NERDTree<CR>
"nnoremap <C-t> :NERDTreeToggle<CR>
"nnoremap <C-f> :NERDTreeFind<CR>
